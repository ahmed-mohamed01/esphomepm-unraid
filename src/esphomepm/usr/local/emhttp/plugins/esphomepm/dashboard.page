<script type="text/javascript">
$(function() {
    // Setup click handler for expanding/collapsing the widget
    $('#esphomepm').on('click', function() {
        $('.esphomepm-expanded').toggle();
    });
    
    // Helper function to update status dot
    function updateStatusDot(selector, status) {
        if (status === 'online') {
            $(selector).css('background-color', '#4CAF50'); // Green
        } else if (status === 'offline') {
            $(selector).css('background-color', '#F44336'); // Red
        } else {
            $(selector).css('background-color', '#999'); // Gray
        }
    }
    
    // Update status dot on data refresh
    $.getJSON('/plugins/esphomepm/status.php', function(data) {
        if (data && data.status) {
            updateStatusDot('.esphomepm-status-dot', data.status);
        }
    });
});
</script>
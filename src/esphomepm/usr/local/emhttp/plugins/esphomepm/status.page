<script>
const esphomepm_status = () => {
    $.getJSON("/plugins/esphomepm/status.php", (data) => {
        if (data) {
            $(".esphomepm-energy-power").html(data.Power);
            $(".esphomepm-energy-today").html(data.Today);
            $(".esphomepm-energy-yesterday").html(data.Yesterday);
            $(".esphomepm-energy-total").html(data.Total);
            $(".esphomepm-energy-voltage").html(data.Voltage);
            $(".esphomepm-energy-current").html(data.Current);
            $(".esphomepm-energy-apparentpower").html(data.ApparentPower);
            $(".esphomepm-energy-reactivepower").html(data.ReactivePower);
            $(".esphomepm-energy-efficiency").html((Number.parseFloat(data.Factor) * 100).toFixed());
            $(".esphomepm-costs_today").html((Number.parseFloat(data.Costs_Price) * Number.parseFloat(data.Today)).toFixed(2));
            $(".esphomepm-costs_yesterday").html((Number.parseFloat(data.Costs_Price) * Number.parseFloat(data.Yesterday)).toFixed(2));
            $(".esphomepm-costs_total").html((Number.parseFloat(data.Costs_Price) * Number.parseFloat(data.Total)).toFixed(2));
            $(".esphomepm-costs_unit").html(data.Costs_Unit);
        }
    });
};

$(document).ready(function() {
    // Initial status update
    esphomepm_status();
    
    // Set up refresh interval if configured
    if (<?=$esphomepm_cfg['UIREFRESH'];?>) {
        setInterval(esphomepm_status, <?=$esphomepm_cfg['UIREFRESH'];?>);
    }
    
    // Initialize toggle view state
    toggleView('esphomepm_view', true);
    
    // Initialize sorting
    sortTable($('#db-box1'), $.cookie('db-box1'));
});
</script>